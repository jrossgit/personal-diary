# Configuration for the Flake8 Python linter
# https://flake8.pycqa.org/en/latest/user/configuration.html#

[flake8]
# To ensure that modifications by Black do not conflict, ignore following errors:
# E203 - Whitespace before ':' slice operator
# E501 - Maximum line length - Black sometimes does not split lines with long tokens
# W503 - Newline before binary operator
ignore = E203,E501,W503

extend-exclude =
    # Enrironments
    .venv,
    # autogenerated mirgrations
    migrations,
    versions,
    # Protobuf
    protos,

# Max permitted complexity of a function
max-complexity = 10
